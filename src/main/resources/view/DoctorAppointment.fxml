<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="600.0" prefWidth="768.0" styleClass="container-anc" stylesheets="@../css/DoctorDashboardStyle.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.medease.controller.DoctorAppointmentController">
   <children>
      <Pane layoutX="32.0" layoutY="30.0" prefHeight="50.0" prefWidth="260.0" styleClass="details-panel" stylesheets="@../css/DoctorDashboardStyle.css">
         <children>
            <ImageView fitHeight="30.0" fitWidth="30.0" layoutX="21.0" layoutY="9.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/doctor-appointment.png" />
               </image>
            </ImageView>
            <Label layoutX="68.0" layoutY="6.0" prefHeight="38.0" prefWidth="191.0" text="TODAY'S APPOINTMENTS" textFill="WHITE">
               <font>
                  <Font name="Candara Bold Italic" size="16.0" />
               </font>
            </Label>
         </children>
      </Pane>
      <TableView fx:id="tblAppointment" layoutX="36.0" layoutY="109.0" prefHeight="403.0" prefWidth="695.0">
        <columns>
          <TableColumn fx:id="colAID" prefWidth="75.0" text="Appointment ID" />
          <TableColumn fx:id="colPID" prefWidth="75.0" text="Patient ID" />
            <TableColumn fx:id="colDate" prefWidth="75.0" text="Date" />
            <TableColumn fx:id="colNo" prefWidth="75.0" text="Check-in No" />
            <TableColumn fx:id="colStatus" prefWidth="75.0" text="Status" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</AnchorPane>
